<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery.name %>
</p>
<p><% if @beer.ratings.empty? %>
 This beer has not yet been rated!
<% else %>
 Has <%= pluralize(@beer.ratings.length, 'rating') %>, average <%= @beer.average_rating %>
<% end %></p>

<%= link_to 'Edit', edit_beer_path(@beer) if current_user%>
<%= link_to 'Destroy', @beer, method: :delete, data: { confirm: 'Are you sure?' } if current_user %>
